ANNLayer "Output" = {
    nxScale = 1; 
    nyScale = 1;
    nf = 8;
    phase = 1;
    triggerLayerName = NULL;
    writeStep = 1.0;
    initialWriteTime = 0.0;
    mirrorBCflag = 1;
    sparseLayer = false;
