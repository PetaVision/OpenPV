    targetLayer                         = "residual";
    message                             = NULL;
    probeOutputFile                     = "recon_error_l2norm.txt";
    triggerLayerName                    = NULL;
    energyProbe                         = "TotalEnergyProbe";
    coefficient                         = 0.5;
    exponent                            = 2.0;
};

