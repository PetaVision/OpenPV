HyPerConn "conn" = {
    preLayerName = "input";
    postLayerName = "outputRecv";
    channelCode = 0;
    sharedWeights = true;
    nxp = 9;
    nyp = 9;
    numAxonalArbors = 1;
    writeStep = -1;
    initialWriteTime = 0.0;
    writeCompressedWeights = false;
    
    weightInitType = "UniformRandomWeight";
    wMinInit = -1;
    wMaxInit = 1;
    sparseFraction = 0;
        
