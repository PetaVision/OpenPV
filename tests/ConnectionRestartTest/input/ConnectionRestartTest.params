//

//  A params file to test initializeFromCheckpointFlag for connections.
//  There is an image as an input layer, and two connections from that
//  input to two output layers.  The connections both use InitWeightsMethod
//  to set strength 1, but one of them uses initializeFromCheckpointFlag
//  to load from a checkpoint where the strength is two.
//  After the run, the output layers should have value 1 and two, respectively.
//

debugParsing = false;    

HyPerCol "column" = {
   nx = 2;
   ny = 2;
   nbatch = 1;
   dt = 1.0;
   randomSeed = 1234567890;  
   stopTime = 10.0;  
   errorOnNotANumber = true;
   progressInterval = 10.0; 
   writeProgressToErr = false;  
   verifyWrites = true;
   outputPath = "output/";
   printParamsFilename = "pv.params"; 
   initializeFromCheckpointDir = "input/restartDir";
   checkpointWrite = false;
   lastCheckpointDir = "output/Last"; 
};

PvpLayer "input" = {
    nxScale = 1;  
    nyScale = 1;  
    	      	  
    inputPath = "input/input.pvp";
    nf = 1; 
    phase = 0; 
    writeStep = -1;  
    sparseLayer = false;
    mirrorBCflag = false;    
    valueBC = 0.0;
    initializeFromCheckpointFlag = false;
    useInputBCflag = false;
    inverseFlag = false; 
    normalizeLuminanceFlag = false;
    autoResizeFlag = false;
    writeImages = false;
    offsetAnchor = "tr";
    offsetX = 0;  
    offsetY = 0;
    displayPeriod = 0;
    padValue = 0;
    batchMethod = "byFile";
    start_frame_index = 0;
    writeFrameToTimestamp = true;
};


ANNLayer "output_from_weightInitType" = {
    initializeFromCheckpointFlag = false;
    nxScale = 1; 
    nyScale = 1;
    nf = 8; 
    phase = 1;
    triggerLayerName = NULL; 
    writeStep = 1.0;
    initialWriteTime = 0.0;
    mirrorBCflag = 1;
    sparseLayer = false;

    InitVType = "ZeroV";

    VThresh = -infinity;   
    AMax = infinity;
    AMin = -infinity;
    AShift = 0.0;
    VWidth = 0.0;
};

ANNLayer "output_from_initializeFromCheckpoint" = {
    initializeFromCheckpointFlag = false;
    nxScale = 1; 
    nyScale = 1;
    nf = 1; 
    phase = 1;
    triggerLayerName = NULL; 
    writeStep = 1.0;
    initialWriteTime = 0.0;
    mirrorBCflag = 1;
    sparseLayer = false;

    InitVType = "ZeroV";
    
    VThresh = -infinity;   
